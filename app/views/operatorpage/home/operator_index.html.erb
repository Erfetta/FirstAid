<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container_navbar_operator">
        <nav class="navbar_operator">
            <button class="nav-button_operator"></button>
            <button class="nav-button_operator"></button>
            <button class="nav-button_operator"></button>
            <button class="nav-button_operator"></button>
        </nav>

        <div class="maps_section">
            <!-- Area centrale vuota con bordo -->
        </div>

        <aside class="reports_section" id="reports-section">
            <% @reports.each do |report| %>
  <div class="report_area">
    <p><strong>Richiesta:</strong> <%= link_to report.id, report_path(report) %></p>
    <p><strong>Data:</strong> <%= report.report_date %></p>
  </div>
<% end %>

        </aside>
    </div>

    <script>
      function fetchReports() {
        fetch("<%= operator_index_path %>")
          .then(response => response.text())
          .then(html => {
            const parser = new DOMParser();
            const doc = parser.parseFromString(html, 'text/html');
            const newReportsSection = doc.querySelector('#reports-section').innerHTML;

            document.querySelector('#reports-section').innerHTML = newReportsSection;
          })
          .catch(error => console.error('Errore durante l\'aggiornamento dei reports:', error));
      }

      setInterval(fetchReports, 10000); // Aggiorna ogni 10 secondi
    </script>
</body>
</html>
