<!-- app/views/userpage/reports/new.html.erb -->
<h1>Crea un nuovo Report</h1>

<%= form_with model: @report, url: userpage_reports_path do |form| %>
  <div class="form-group">
    <%= form.label :report_time %>
    <%= form.time_field :report_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :report_date %>
    <%= form.date_field :report_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :coordinates %>
    <%= form.text_field :coordinates, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.number_field :user_id, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Crea Report', class: 'btn btn-primary' %>
  </div>
<% end %>
