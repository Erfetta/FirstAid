<html>
  <head>
    <title>Firstaid</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    
  </head>

  <body>
    <%= yield %>
    <!-- Mostra il form di logout solo se l'utente Ã¨ autenticato -->
